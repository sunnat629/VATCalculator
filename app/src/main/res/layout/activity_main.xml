<?xml version="1.0" encoding="utf-8"?>
<layout   xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res-auto"
          xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel" type="com.sunnat629.vatcalculator.MainViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">


        <TextView
                android:text="@string/country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/label_country"
                style="@style/Title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/label_effective_from"
                android:layout_marginTop="32dp"/>

        <Spinner
                android:id="@+id/countrySpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/label_country"
                app:layout_constraintTop_toTopOf="@+id/label_country"
                app:layout_constraintBottom_toBottomOf="@+id/label_country" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
                android:text="@string/label_vat_rate"
                android:layout_width="0dp"
                style="@style/Title"
                android:layout_height="wrap_content"
                android:id="@+id/label_vat_rate"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/label_country"/>

        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/label_vat_rate" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/label_vat_rate" app:layout_constraintBottom_toBottomOf="@+id/label_vat_rate"
                app:layout_constraintHorizontal_bias="0.0">
            <!--<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"/>-->
            <!--<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"/>-->
            <!--<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"/>-->
        </RadioGroup>


        <TextView
                android:text="@string/label_price_excluding_vat"
                android:layout_width="wrap_content"
                style="@style/Title"
                android:layout_height="wrap_content"
                android:id="@+id/label_ex_vat" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/label_vat_rate"/>


        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_lay_ex_vat"
                android:layout_width="0dp"
                style="@style/TextInputLayout"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@+id/label_ex_vat" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/label_ex_vat" app:layout_constraintBottom_toBottomOf="@+id/label_ex_vat">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_ex_vat"
                    android:layout_width="match_parent"
                    android:textAlignment="textEnd"
                    android:text="@={viewModel.exclVatAmount}"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
                android:text="@string/vat"
                android:layout_width="wrap_content"
                style="@style/Title"
                android:layout_height="wrap_content"
                android:id="@+id/label_vat"
                android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/label_ex_vat"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>


        <TextView
                android:text="@{viewModel.vatByAmount}"
                android:layout_width="0dp"
                style="@style/Title"
                android:layout_height="wrap_content"
                android:id="@+id/display_vat"
                android:textAlignment="textEnd"
                android:padding="5dp"
                app:layout_constraintStart_toEndOf="@+id/label_ex_vat"
                app:layout_constraintEnd_toEndOf="@+id/input_lay_ex_vat"
                app:layout_constraintHorizontal_bias="0.407"
                app:layout_constraintTop_toTopOf="@+id/label_vat" app:layout_constraintBottom_toBottomOf="@+id/label_vat"/>


        <TextView
                android:text="@string/label_price_including_vat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_in_vat"
                style="@style/Title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/label_vat"/>

        <TextView
                android:id="@+id/input_in_vat"
                android:layout_width="0dp"
                android:text="@{viewModel.inclVatAmount}"
                style="@style/Title"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="@+id/label_in_vat" app:layout_constraintBottom_toBottomOf="@+id/label_in_vat"
                app:layout_constraintStart_toStartOf="@+id/input_lay_ex_vat"/>
        <TextView
                android:text="@string/effective_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_effective_from" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>


        <com.google.android.material.button.MaterialButton
                android:id="@+id/label_calculate"
                style="@style/TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_calculate"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@android:color/white" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/label_in_vat" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>